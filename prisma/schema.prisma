generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Case {
  id            String         @id @default(cuid())
  direction     String
  caseType      String
  answers       Json
  createdAt     DateTime       @default(now())
  documents     Document[]
  extractedData ExtractedData?
  report        Report?
  timeline      Timeline?
  templatePack  TemplatePack?
}

model Document {
  id         String   @id @default(cuid())
  caseId     String
  fileName   String
  mimeType   String
  size       Int
  storedPath String
  createdAt  DateTime @default(now())
  deleteAt   DateTime
  case       Case     @relation(fields: [caseId], references: [id], onDelete: Cascade)
}

model ExtractedData {
  id         String   @id @default(cuid())
  caseId     String   @unique
  aggregated Json
  createdAt  DateTime @default(now())
  case       Case     @relation(fields: [caseId], references: [id], onDelete: Cascade)
}

model Report {
  id              String   @id @default(cuid())
  caseId          String   @unique
  riskLevel       String
  missingDocs     Json
  inconsistencies Json
  actionItems     Json
  rawModel        Json
  createdAt       DateTime @default(now())
  case            Case     @relation(fields: [caseId], references: [id], onDelete: Cascade)
}

model Timeline {
  id        String   @id @default(cuid())
  caseId    String   @unique
  items     Json
  createdAt DateTime @default(now())
  case      Case     @relation(fields: [caseId], references: [id], onDelete: Cascade)
}

model TemplatePack {
  id        String   @id @default(cuid())
  caseId    String   @unique
  templates Json
  createdAt DateTime @default(now())
  case      Case     @relation(fields: [caseId], references: [id], onDelete: Cascade)
}
